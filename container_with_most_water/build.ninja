# build.ninja
cc     = clang
cflags = -std=c11 -g -O2 -Wall -Wextra

rule compile
  command = $cc $cflags -c $in -o $out

rule link
  command = $cc $in -o $out

build container_with_most_water.o:               compile container_with_most_water.c

build exe: link container_with_most_water.o

default exe
